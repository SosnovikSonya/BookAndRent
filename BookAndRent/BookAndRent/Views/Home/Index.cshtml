@model BookAndRent.Views.ViewModels.ApartmentModels.SearchModel

@{
    ViewData["Title"] = "Home Page";
}

<style>

    .a {
        border-width: 1px;
        border-color: rgb(190,190,190);
        border-style: solid;
        padding: 20px 20px 20px 20px;
        box-shadow: 0.4em 0.4em 5px rgba(122,122,122,0.5);
    }
</style>

<br />
<br />
<div class="a">
    <form asp-controller="Apartment" asp-action="SearchAvailableApartment" method="post">
        <div class="row">

            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" placeholder="Укажите город" style="width: 210px;" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CheckIn" class="control-label"></label>
                    <input asp-for="CheckIn" type="date" class="form-control" placeholder="Приезд" style="width: 210px;" />
                    <span asp-validation-for="CheckIn" class="text-danger"></span>

                </div>
            </div>

            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CheckOut" class="control-label"></label>
                    <input asp-for="CheckOut" type="date" class="form-control" placeholder="Выезд" style="width: 210px;" />
                    <span asp-validation-for="CheckOut" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SleepingPlaces" class="control-label"></label>
                    <input asp-for="SleepingPlaces" class="form-control" placeholder="Сколько гостей?" style="width: 213px;" />
                    <span asp-validation-for="SleepingPlaces" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group" align="right">
                    <input type="submit" value="Искать" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>