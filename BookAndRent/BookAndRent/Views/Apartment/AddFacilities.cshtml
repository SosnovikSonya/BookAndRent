@model BookAndRent.Views.ViewModels.ApartmentModels.ApartmentFacilities

@{
    ViewData["Title"] = "Принимайте гостей";
}

<h2>Шаг 2 - Дополнительные удобства</h2>

<hr />

<div class="row">
    <form asp-action="AddFacilities" method="post">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <ul>
                    @foreach (var item in this.Model.Facilities)
                    {
                        <li>
                            <input id="@item.Title" type="checkbox" value="@item.Title" name="facility" />                          
                            <label asp-for="@item.Title">@item.Title</label>
                        </li>
                    }
                </ul>
            </div>

            <div class="form-group">
                <input asp-for="ApartmentId" class="form-control" name="ApartmentId"  type="hidden"  value="@Model.ApartmentId"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Далее" class="btn btn-default" />
            </div>
        </div>
       
    </form>
</div>
