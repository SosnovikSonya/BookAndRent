@model BookAndRent.Views.ViewModels.ApartmentInfo

@{
    ViewData["Title"] = "AddAvailableDates";
}

<h2>Шаг 4 - Доступные даты</h2>

<hr />

<div>
    <form asp-action="AddAvailableDates" method="post">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">                  
                    <input name="StartDate" type="date" class="form-control" style="width: 210px;"/>
                </div>
            </div>

            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group"> 
                    <input name="EndDate" type="date" class="form-control" style="width: 210px;" />
                </div>

                <div class="form-group">
                    <input asp-for="ApartmentId" class="form-control" name="ApartmentId" type="hidden" value="@Model.ApartmentId" />
                </div>
            </div>


        </div>

        <div class="row">
            <div class="col-md-4">

                <div class="form-group">
                    <input type="submit" value="Зарегистрировать" class="btn btn-default" />
                </div>

            </div>
        </div>
    </form>
</div>






