@model BookAndRent.Views.ViewModels.ApartmentModels.AvailableApartmentInfo

@{
    ViewData["Title"] = "ApartmentInfo";
}


<br />

<div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <h2>@Model.Address</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-md-12">
                @foreach (var picture in Model.Pictures)
                {
                    <img style='width:200px; height:200px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(picture.PictureBytes))" />
                }
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-8" >
        <div class="form-group">
            <h3>@Model.Title</h3>
            <h5>@Model.SleepingPlaces  гостя @Model.RoomAmount комнаты</h5>
        </div>

        <div class="form-group">
            <h4>@Model.Description</h4>
        </div>

      
        <div class="form-group">
            <h3>Удобства</h3>
            @foreach (var item in Model.Facilities)
            {
                <ul>
                    <li>
                        @item.Title
                    </li>
                </ul>
            }
        </div>

    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
        <br /><br />
        <div class="form-group">
            <label asp-for="CostPerNight" class="control-label"></label>
            @Html.DisplayFor(model => model.CostPerNight)
        </div>

        <div class="form-group">
            <input type="submit" value="Забронировать" class="btn btn-default" />
        </div>

    </div>
</div>